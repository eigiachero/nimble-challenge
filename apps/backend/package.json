{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express backend server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch --include src src/index.ts",
    "start": "cd dist && NODE_ENV=production node index.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "migrate:generate": "drizzle-kit generate",
    "migrate:up": "drizzle-kit migrate",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/lodash-es": "^4.17.12",
    "abind": "^1.0.5",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.3",
    "express": "^4.18.2",
    "globby": "^14.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8",
    "drizzle-kit": "^0.31.4",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@stylistic/eslint-plugin": "*",
    "eslint": "*",
    "typescript-eslint": "*"
  }
}
